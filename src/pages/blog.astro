---
import Layout from '../layouts/Layout.astro';
import Lorem from '../components/Lorem.astro';
import Nav from '../components/Nav.astro';
import Post from '../components/Post.astro';
import Footer from '../components/Footer.astro';
const allPosts = await Astro.glob('../pages/posts/*.md');
---

<Layout title="Blog">
	<body>
        <Nav />
        <h2>This is a blog made with astro</h2>
        <ul>
            <!-- <li><a href="/posts/post2">Post 2</a></li>
            <li><a href="/posts/post3">Post 3</a></li>
            <li><a href="/posts/post4">Post 4</a></li> -->
            {allPosts.map(post => <Post url={post.url} title={post.frontmatter.title}>{post.frontmatter.title}</Post>)}
        </ul>
        <Footer />
	</body>
</Layout>

<style>
    ul {
        list-style: none;
    }
    a {
        color: blue;
        text-decoration: none;
    }
</style>